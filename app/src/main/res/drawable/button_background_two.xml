<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#F23276B1" />
            <stroke android:width="4dp" android:color="@color/indigo" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#E6379ACF" />
            <stroke android:width="2dp" android:color="@color/indigo" />
        </shape>
    </item>
</selector>